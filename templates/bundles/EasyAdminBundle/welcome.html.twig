{% extends '@BaseAdmin/bundles/EasyAdminBundle/welcome.html.twig' %}

{% block layout_px_spacing %}
    <div class="container">
        {% if isSuperAdmin %}
        <div class="row mt-4" style="gap:5px 0">
            {% for card in cards %}
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 card">
                    <div class="card-body d-flex justify-content-between">
                        <span class="font--bold lead">{{ card.name }}</span>
                        <span 
                            class="d-flex justify-content-center align-items-center rounded-circle font-weight-bold text-light"
                            style="
                                width: 2.5em;
                                height: 2.5em;
                                background: #6399FF;
                            "
                        >
                            {{ card.count }}
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
        {% if works %}
        <div class="row mt-4" style="gap:5px 0">
            {% for work in works %}
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 card">
                    <div class="card-body d-flex justify-content-between">
                        <span class="font--bold lead">{{ work.name }}</span>
                        <span 
                            class="d-flex justify-content-center align-items-center rounded-circle font-weight-bold text-light"
                            style="
                                width: 2.5em;
                                height: 2.5em;
                                background: #6399FF;
                            "
                        >
                            {{ work.count }}
                        </span>
                    </div>
                </div>
            {% endfor %}
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 card">
                    <div class="card-body d-flex justify-content-between">
                        <span class="font--bold lead">Crear trabajo</span>
                        <a 
                            href="?crudAction=new&crudControllerFqcn=App%5CController%5CS%5CAdmin%5CTrabajo%5CTrabajoCrudController"
                            class="d-flex justify-content-center align-items-center rounded-circle font-weight-bold text-light"
                            style="
                                width: 2.5em;
                                height: 2.5em;
                                background: #6399FF;
                            "
                        >
                            +
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="card col-12 mt-3">
            <div class="card-body">
                <h4>Tus trabajos</h4>
                {% if worksOwner %}
                    <table class="table table-sm table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>TÃ­tulo</th>
                                <th>Categoria</th>
                                <th>Programa</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for work in worksOwner %}
                                <tr>
                                    <th>{{work.title}}</th>
                                    <th>{{work.category.name}}</th>
                                    <th>{{work.program.name}}</th>
                                </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                {% else %}
                    <h6 class="text-center">no tienes trabajos</h6>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock layout_px_spacing %}