{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% import "layouts/components/macros/buttons.html.twig" as buttons %}

{% block body_title %}{{"title.security.register"|trans({},"titles")}}{% endblock %}

{% block account_form_class %}col-xl-10 col-lg-10 col-md-10 col-sm-12{% endblock %}

{% block content %}
	<div class="nk-block toggled" id="l-login">
  		<div class="nk-form">
			{{ form_start(form, {'method': 'post', 'action': action, 'attr': {'class': 'fos_user_registration_register'}}) }}
				<div class="row">
					<div class="col-md-6">
						{{ form_row(form.firstname)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.lastname)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.country)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.primaryPhone.number)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.birthday)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.email)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.username)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.plainPassword)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.identification)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.acceptedTerm)}}
					</div>
					<div class="col-md-6">
						{{ form_widget(form.recaptcha)}}
						{{ form_errors(form.recaptcha) }}
					</div>
				</div>
					{{ form_rest(form) }}
					{{ form_errors(form) }}
				<div class="row justify-content-center">
					<div class="col-md-7">
						<div class="form-group">
							{{buttons.submit({
								title: "button.fos_user.sign_up",
								class: "btn btn-warning btn-lg btn-block",
								icon: "",
								id: "btn_submit"
							})}}
						</div>
					</div>
				</div>
				<div class="form-group">
			      	<div class="d-block">
			          <div class="text-center">
			            <p>
			              Antes de registrarse asegurese de leer los terminos y condiciones
			              <a href="{{path("app_route_terms_index")}}" class="text-small">Terminos y Condiciones</a>
			            </p>
			          </div>
			        </div>
			    </div>
                <div class="form-group">
                    <div class="d-block">
                    <div class="text-center">
                        <p>
                        ¿Ya tiene una cuenta?
                        <a href="{{path("fos_user_security_login")}}" class="text-small">Ingrese desde aquí</a>
                        </p>
                    </div>
                    </div>
                </div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}